<!DOCTYPE html>
<html>
  <head>
  <%- include ./partials/head %>
    <title>Detail Bayi</title>
  </head>
  <body>
    <h1><%= data_bayi.namabayi %></h1>
    <h3>Orang Tua : <%= data_bayi.OrangTua.namaortu %></h3>

    <% if (!data_bayi.Mantri) { %>
      <h3> Petugas : --- </h3>
    <% } else { %>
      <h3>Petugas : <%= data_bayi.Mantri.namamantri %></h3>
    <% } %>

  <div class="container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>No.</th>
          <th>Vaksin</th>
          <th class="text-center">Usia Minimal</th>
          <th class="text-center">Status</th>
          <th class="text-center">Keterangan</th>
        </tr>
      </thead>
      <tbody>

      <% var i = 1 %>
      <% data_vaksin.forEach(list => { %>
        <tr>
          <td><%= i++ %></td>
          <td><%= list.Vaksin.namavaksin %></td>
          <td class="text-center"><%=  list.Vaksin.umurmin %> bulan</td>

          <% if (list.sudah == 1) { %>
            <td class="text-center">Sudah</td>
          <% } else { %>
            <td class="text-center">Belum</td>
          <% } %>

          <% if (list.sudah != 1 && list.Vaksin.umurmin > data_bayi.umur.umurBulan) { %>
            <td class="text-center">Belum Cukup Umur</td>
            <% } else { %>
              <td class="text-center"> -- </td>
              <% } %>
        </tr>

      <% }) %>

      </tbody>
    </table>
  </div>

  </body>
</html>