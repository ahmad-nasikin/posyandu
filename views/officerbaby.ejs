<!DOCTYPE html>
<html>
  <head>
  <%- include ./partials/head %>
    <title><%= data_bayi.namamantri %></title>
  </head>
  <body>

    <h3><%= data_bayi.namamantri %></h3>

    <div class="container">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="text-center">No.</th>
            <th class="text-center">Nama Bayi</th>
            <th class="text-center">Jenis Kelamin</th>
            <th class="text-center">Tanggal Lahir</th>
            <th class="text-center">Umur</th>
            <th class="text-center">Detail</th>
          </tr>
        </thead>
        <tbody>

        <% var i = 1 %>
        <% data_bayi.Bayis.forEach(list => { %>
          <tr>
            <td><%= i++ %></td>
            <td><%= list.namabayi %></td>
            <td class="text-center"><%= list.kelamin %></td>
            <td class="text-center"><%= list.umur.hari + ' - ' + list.umur.bulan + ' - ' + list.umur.tahun %></td>
            <td class="text-center"><%= list.umur.umur %></td>

            <td class="text-center"><a class='btn btn-info btn-xs' href="/officers/<%= data_bayi.id %>/<%= list.id %>"><span class="glyphicon glyphicon-edit"></span> Detail</a></td>
          </tr>
        <% }) %>

        </tbody>
      </table>
    </div>


  </body>
</html>