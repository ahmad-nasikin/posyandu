<!DOCTYPE html>
<html>
  <head>
  <%- include ./partials/head %>
    <title>Daftar Bayi</title>
  </head>
  <body>
    <h3>Daftar Bayi</h3>

    <div class="container">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>No.</th>
            <th>Nama bayi</th>
            <th>Jenis Kelamin</th>
            <th>Tanggal Lahir</th>
            
            <th>Orang Tua</th>
            <th>Petugas</th>
            <th class="text-center">Detail</th>
          </tr>
        </thead>
        <tbody>

        <% var i = 1 %>
        <% data_bayi.forEach(list => { %>
          <tr>
            <td><%= i++ %></td>
            <td><%= list.namabayi %></td>
            <td><%= list.kelamin %></td>
            <td><%= list.umur.umur %></td>
            <td><%= list.OrangTua.namaortu %></td>

            <% if (!list.Mantri) { %>

              <td><a class='btn btn-info btn-xs' href="/officers/assign/<%= list.id %>"><span class="glyphicon glyphicon-plus"></span> Assign</a></td>

            <% } else { %>
              <td><%= list.Mantri.namamantri %></td>
            <% } %>

          </tr>
        <% }) %>

        </tbody>
      </table>
    </div>

  </body>
</html>